@model Lawyers.BLL.Dtos.DtosCasos.CasoIntermediarioDto

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Casos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCaso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCaso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdAbogado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdAbogado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreAbogado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreAbogado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCaso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoCaso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCaso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoCaso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Latitud)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitud)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Longitud)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longitud)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Editar caso" asp-route-id="@Model?.Id" class="btn btn-danger">Editar caso</a> |
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
        <form asp-action="Print" asp-controller="Casos" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Imprimir</button>
        </form>
</div>
</body>
</html>
