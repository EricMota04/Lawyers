@model Usuarios;

@{
    ViewBag.Title = "Proyecto Final";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/login.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="main-content">
        <div class="background"></div>
        <div class="row">
            <div class="content">
                <h1>Iniciar Sesión</h1>
                <div class="formu">
                    <form asp-controller="Login" asp-action="Login">
                        <div class="col-lg-6 col-lg-offset-0">
                            <br />
                            <div class="input-box">
                                <input asp-for="Usuario" type="text" class="form-control" placeholder="User" />
                                <span asp-validation-for="Usuario" class="error"></span>
                            </div>
                            <br />
                            <div class="input-box">
                                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Contrasena" class="error"></span>
                            </div>
                            <br />
                            <div>
                                <input type="submit" class="btn btn-success btn-lg" value="Entrar" />
                            </div>
                        </div>
                        @if (TempData["Error"] is not null)
                        {
                            <p class="error">@TempData["Error"]</p>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
